{
  "name": "EBSoc Tools",
  "description": "EBS 온라인클래스 플레이어 툴",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://taj.ebsoc.co.kr/*",
    "https://player.ebsoc.co.kr/*",
    "https://v.kr.kollus.com/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}